          },
          "author": {
            "type": "string"
          },
          "ISBN": {
            "type": "string"
          },
          "availableCopies": {
            "type": "number"
          },
          "borrowedBy": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "userId": {
